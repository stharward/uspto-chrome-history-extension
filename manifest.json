{
  "manifest_version": 2,

  "name": "Search History Generator",
  "description": "Generate a search history for supported websites that can easily be 'printed' into e-Red Folder",
  "version": "1",

  "browser_action": {
    "default_icon": "clock.png" // TODO: draw a new icon
  },
  "permissions": [
    "history"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
